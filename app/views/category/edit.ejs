<%- include('../layouts/header.ejs') %>
<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <div class="page-title">
        <h1>Chỉnh Sửa Chuyên Mục</h1>
      </div>
    </div>
    <div class="card alert">
      <div class="card-body">
        <form
          action="/category/<%= category.MaChuyenMuc %>"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="form-group">
            <label for="TenChuyenMuc">Tên Chuyên Mục</label>
            <input
              type="text"
              name="TenChuyenMuc"
              id="TenChuyenMuc"
              class="form-control"
              value="<%= category.TenChuyenMuc %>"
              required
            />
          </div>
          <div class="form-group">
            <label for="HinhAnh">Hình Ảnh</label>
            <input type="file" name="HinhAnh" id="HinhAnh" class="form-control" />
          </div>
          <a href="/category" class="btn btn-primary">Quay Lại</a>
          <button type="submit" class="btn btn-success">Lưu Thông Tin</button>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('../layouts/footer.ejs') %>
