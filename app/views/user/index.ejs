<%- include('../layouts/header.ejs') %>

<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <div class="page-title">
        <h1>Danh Sách Người Dùng</h1>
      </div>
    </div>
    <div class="card alert">
      <div class="card-body">
        <form method="GET" action="/user" class="form-inline mb-5" style="margin-bottom: 15px;">
          <input
            type="text"
            name="search"
            class="form-control"
            placeholder="Tìm kiếm người dùng"
            value="<%= search %>"
          />
          <button type="submit" class="btn btn-primary mt-2">Tìm kiếm</button>
        </form>
        <!-- Bảng dữ liệu -->
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                    <th>#</th>
                    <th>Họ Tên</th>
                    <th>Tài Khoản</th>
                    <th>Số Điện Thoại</th>
                    <th>Email</th>
                    <th>Trạng Thái</th>
                    <th>Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (users.length > 0) { %>
                        <% users.forEach((user) => { %>
                        <tr>
                            <td><%= user.MaNguoiDung %></td>
                            <td><%= user.TaiKhoan %></td>
                            <td><%= user.HoTen %></td>
                            <td><%= user.SoDienThoai %></td>
                            <td><%= user.Email %></td>
                            <td><%= user.TrangThai === "activate" ? "Hoạt động" : "Bị chặn" %></td>
                            <td>
                                <a href="/user/<%= user.MaNguoiDung %>/block" 
                                    class="btn <%= user.TrangThai === 'activate' ? 'btn-danger' : 'btn-warning' %>">
                                    <%= user.TrangThai === "activate" ? "Cấm User" : "Bỏ Cấm" %>
                                 </a>
                            </td>
                        </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" style="text-align: center;">Không có người dùng nào trong danh sách!</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <!-- Phân trang -->
        <nav>
          <ul class="pagination">
            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="/user?page=<%= i %>&search=<%= search %>"><%= i %></a>
              </li>
            <% } %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>

<%- include('../layouts/footer.ejs') %>
